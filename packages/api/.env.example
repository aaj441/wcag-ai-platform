# Database
DATABASE_URL="postgresql://username:password@localhost:5432/wcag_ai_platform"

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@wcagplatform.com
FROM_NAME=WCAG AI Platform

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_EXECUTABLE_PATH=

# Browserless Configuration (Alternative to Puppeteer)
BROWSERLESS_URL=
BROWSERLESS_TOKEN=

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key

# Monitoring
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External APIs
GOOGLE_PAGESPEED_API_KEY=
AXE_API_URL=https://axe-api.example.com

# WebSocket Configuration
WS_PORT=3002
WS_PATH=/ws

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# Analytics
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=

# Feature Flags
ENABLE_ORGANIZATIONS=true
ENABLE_PROJECTS=true
ENABLE_REPORTS=true
ENABLE_AUDIT_LOG=true
ENABLE_EMAIL_NOTIFICATIONS=true