# WCAG AI Platform API - Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains sensitive credentials

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/wcag_ai_platform

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================================================
# CLERK AUTHENTICATION
# ============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# ============================================================================
# STRIPE BILLING
# ============================================================================
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_test_xxxxx

# Optional: Stripe product price IDs
STRIPE_PRICE_ID_BASIC=price_xxxxx
STRIPE_PRICE_ID_PRO=price_xxxxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxxxx

# ============================================================================
# SENDGRID EMAIL SERVICE
# ============================================================================
SENDGRID_API_KEY=SG.xxxxx
SENDER_EMAIL=noreply@wcag-ai.com
ALERT_EMAIL=alerts@wcag-ai.com

# Optional: SendGrid template IDs
SENDGRID_WELCOME_TEMPLATE_ID=d-xxxxx
SENDGRID_DAILY_REPORT_TEMPLATE_ID=d-xxxxx
SENDGRID_PAYMENT_CONFIRMATION_TEMPLATE_ID=d-xxxxx
SENDGRID_PAYMENT_FAILED_TEMPLATE_ID=d-xxxxx

# ============================================================================
# REDIS CACHE & JOB QUEUE
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# SCAN SCHEDULER
# ============================================================================
SCAN_SCHEDULER_ENABLED=true
SCAN_SCHEDULER_CRON=0 2 * * *
MAX_SCANS_PER_DAY=500

# ============================================================================
# SECURITY & SESSIONS
# ============================================================================
SESSION_SECRET=your-secure-random-secret-here-minimum-32-characters
SESSION_TIMEOUT=86400
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d
JWT_EXPIRATION=3600

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# AWS S3 (Optional, for storing reports)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=wcag-ai-reports
S3_PUBLIC_BUCKET_URL=https://wcag-ai-reports.s3.us-east-1.amazonaws.com

# ============================================================================
# PUPPETEER & BROWSER AUTOMATION
# ============================================================================
PUPPETEER_HEADLESS=true
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# ============================================================================
# EXTERNAL APIs (Optional)
# ============================================================================
APOLLO_API_KEY=
HUNTER_API_KEY=
OPENAI_API_KEY=
AXE_API_KEY=
WEBAIM_API_KEY=

# ============================================================================
# GITHUB INTEGRATION (Optional)
# ============================================================================
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=
GITHUB_REPO_OWNER=
GITHUB_REPO_NAME=

# ============================================================================
# APPLICATION URLS
# ============================================================================
API_BASE_URL=http://localhost:3001
DASHBOARD_URL=http://localhost:3000
WEBSITE_URL=https://wcag-ai.com
APP_URL=http://localhost:3000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_EMAIL_OUTREACH=false
ENABLE_PDF_EXPORT=false
DATADOG_ENABLED=false
FEATURE_FLAGS_ENABLED=false
