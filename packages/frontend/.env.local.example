# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Application Configuration
NEXT_PUBLIC_APP_NAME="WCAG AI Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ORGANIZATIONS=true
NEXT_PUBLIC_ENABLE_PROJECTS=true
NEXT_PUBLIC_ENABLE_REPORTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# External Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ORG=
NEXT_PUBLIC_SENTRY_PROJECT=

# Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_RATE_LIMIT_WINDOW=15
NEXT_PUBLIC_RATE_LIMIT_MAX=100

# Development Configuration
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# Map Configuration
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Email Configuration (for contact forms)
NEXT_PUBLIC_CONTACT_EMAIL=support@wcagplatform.com

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=
NEXT_PUBLIC_FACEBOOK_URL=
NEXT_PUBLIC_LINKEDIN_URL=

# Documentation
NEXT_PUBLIC_DOCS_URL=https://docs.wcagplatform.com
NEXT_PUBLIC_HELP_URL=https://help.wcagplatform.com
NEXT_PUBLIC_BLOG_URL=https://blog.wcagplatform.com

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.wcagplatform.com
NEXT_PUBLIC_ASSETS_URL=https://assets.wcagplatform.com

# Security
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_CSRF_TOKEN_NAME=csrf-token

# Performance
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_CACHE_DURATION=3600

# Accessibility
NEXT_PUBLIC_HIGH_CONTRAST_MODE=false
NEXT_PUBLIC_REDUCED_MOTION=false
NEXT_PUBLIC_SCREEN_READER_MODE=false

# Testing
NEXT_PUBLIC_TEST_MODE=false
NEXT_PUBLIC_MOCK_API=false

# Theme
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_COLORS=blue