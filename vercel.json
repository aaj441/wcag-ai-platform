{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "pnpm build:infinitysoul",
  "installCommand": "pnpm install",
  "framework": null,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "@app_url",
    "GEMINI_API_KEY": "@gemini_api_key",
    "REDIS_URL": "@redis_url",
    "DATABASE_URL": "@database_url"
  },
  "regions": ["iad1"],
  "functions": {
    "apps/web/app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
