# ====================
# WCAG AI Platform - Production Environment Template
# ====================
# Copy this file to .env.production and fill in the values

# ===== Cloud Provider Credentials =====
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="us-east-1"

# ===== Railway =====
RAILWAY_TOKEN="..."
RAILWAY_PROJECT_ID="..."

# ===== OpenAI =====
OPENAI_API_KEY="sk-..."
OPENAI_ORG_ID=""

# ===== Observability =====
SENTRY_DSN="https://...@sentry.io/..."
SENTRY_ENVIRONMENT="production"
JAEGER_ENDPOINT="http://localhost:14268/api/traces"
GRAFANA_CLOUD_API_KEY=""

# ===== Feature Flags =====
LAUNCHDARKLY_SDK_KEY="sdk-..."
LAUNCHDARKLY_CLIENT_ID="..."

# ===== Database =====
DATABASE_URL="postgresql://user:pass@host:5432/wcagaii"
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===== Redis =====
REDIS_URL="redis://localhost:6379"

# ===== Security =====
JWT_SECRET="..." # Generate with: openssl rand -base64 32
API_RATE_LIMIT=100
SIGNING_PRIVATE_KEY="..." # For audit log signing

# ===== Storage =====
AUDIT_LOG_BUCKET="wcagai-audit-logs"
RESULTS_BUCKET="wcagai-scan-results"

# ===== Application =====
NODE_ENV="production"
PORT=8080
API_BASE_URL="https://api.wcagaii.com"
FRONTEND_URL="https://wcagaii.com"

# ===== Browser Pool =====
MIN_POOL_SIZE=2
MAX_POOL_SIZE=5
SCAN_TIMEOUT=30000

# ===== Cost Management =====
OPENAI_MONTHLY_BUDGET=500
COST_ALERT_THRESHOLD=0.8
