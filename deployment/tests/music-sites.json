  "testScenarios": [
    {
      "name": "Player Controls Accessibility",
      "description": "Test keyboard navigation and screen reader support for media players",
      "steps": [
        "Navigate to player using keyboard only",
        "Activate play/pause with Enter/Space",
        "Adjust volume with arrow keys",
        "Skip tracks with keyboard shortcuts",
        "Verify ARIA labels on all controls"
      ]
    },
    {
      "name": "Search Functionality",
      "description": "Test search features for WCAG compliance",
      "steps": [
        "Locate search input with keyboard",
        "Verify autocomplete accessibility",
        "Test search results navigation",
        "Check result announcement for screen readers",
        "Verify filter controls accessibility"
      ]
    },
    {
      "name": "Dynamic Content Updates",
      "description": "Test real-time updates and notifications",
      "steps": [
        "Monitor ARIA live regions",
        "Test notification announcements",
        "Verify focus management on updates",
        "Check loading state indicators",
        "Test error message accessibility"
      ]
    },
    {
      "name": "Color Contrast",
      "description": "Verify color contrast ratios meet WCAG AA standards",
      "steps": [
        "Test text on background contrast (4.5:1)",
        "Verify button contrast (3:1)",
        "Check focus indicators visibility",
        "Test dark mode contrast ratios",
        "Verify disabled state visibility"
      ]
    },
    {
      "name": "Mobile Responsiveness",
      "description": "Test mobile viewport accessibility",
      "steps": [
        "Test touch target sizes (44x44px minimum)",
        "Verify orientation support",
        "Test zoom functionality (200%)",
        "Check mobile navigation accessibility",
        "Verify gesture alternatives"
      ]
    }
  ]
