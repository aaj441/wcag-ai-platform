  "testScenarios": [
    {
      "name": "Keyboard Navigation",
      "description": "Full keyboard accessibility without mouse",
      "steps": [
        "Navigate entire page using Tab/Shift+Tab",
        "Activate all interactive elements with Enter/Space",
        "Access dropdown menus with arrow keys",
        "Close modals with Escape key",
        "Verify visible focus indicators"
      ],
      "applicableIndustries": ["all"]
    },
    {
      "name": "Screen Reader Compatibility",
      "description": "Test with NVDA, JAWS, and VoiceOver",
      "steps": [
        "Verify heading structure (h1-h6)",
        "Test ARIA labels and descriptions",
        "Check landmark regions",
        "Verify form labels and error messages",
        "Test dynamic content announcements"
      ],
      "applicableIndustries": ["all"]
    },
    {
      "name": "Form Accessibility",
      "description": "Complex form validation and error handling",
      "steps": [
        "Verify all inputs have labels",
        "Test error message associations",
        "Check required field indicators",
        "Test inline validation",
        "Verify success confirmations"
      ],
